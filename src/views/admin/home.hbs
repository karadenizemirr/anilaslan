<div class="container mt-4">
    <div class="row">
        <div class="title text-center">
            <h1>
                Kazançlar
            </h1>
        </div>
        <div class="content card mt-4">
            <table class="table table-striped text-center" style="border-radius: 10%;">
                <thead>
                    <tr>
                        <th scope="col">Adı</th>
                        <th scope="col">Soyadı</th>
                        <th scope="col">İşin Adı</th>
                        <th scope="col">Kazancı</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each apporoveds}}
                                        <tr>
                        <th> {{this.user.name}} </th>
                        <td>{{this.user.surname}}</td>
                        <td> {{this.work.title}} </td>
                        <td> {{this.work.price}} </td>
                    </tr>
                    {{/each}}
                    <tr>
                </tbody>
            </table>
        </div>
    </div>
</div>