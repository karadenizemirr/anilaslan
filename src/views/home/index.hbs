<div class="container">
    <div class="row mt-5">
        <div class="col-md-5 mt-auto mb-auto text-center">
            <div class="title">
                <h1 class="text-primary animate__animated animate__bounce">
                    Aradığın İş Burada
                </h1>
                <p>
                    Üye ol işlere başvur
                </p>
            </div>
            <div class="content ">   
                <form action="/user/login" method="post">
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Mail Adresi" name="email" autocomplete="off">
                        </div>
                        <div class="col">
                            <input type="password" class="form-control" 
                            placeholder="Şifre" 
                            name="password" autocomplete="off"
                            >
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                            <button type="submit">
                                <i class="fas fa-sign-in-alt mr-2" style="margin-right: 10px;"></i>Giriş Yap
                            </button>
                            <a class="btn btn-secondary" href="/user/register">
                                <i class="fas fa-user-plus" style="margin-right: 10px;"></i>Kayıt Ol
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-7">
            <img src="/public/header.jpg" alt="" class="img-fluid">
        </div>
    </div>
</div>